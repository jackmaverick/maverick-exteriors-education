		<!-- Services Section -->
		<div class="bg-white rounded-xl border-2 border-gray-200 p-8 card-hover">
			<div class="text-center mb-8">
				<h2 class="text-3xl font-black text-gray-900 heading-font mb-4">Professional Services</h2>
				<p class="text-gray-600 font-medium text-lg">Expert roofing solutions backed by 30+ years of Kansas City experience</p>
			</div>

			<div class="grid md:grid-cols-3 gap-8">
				<div class="text-center">
