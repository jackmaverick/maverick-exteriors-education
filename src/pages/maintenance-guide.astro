---
import Layout from '../layouts/Layout.astro';
import PDFDownload from '../components/PDFDownload.astro';
---

<Layout title="Roof Maintenance Guide" description="Seasonal maintenance calendar and care instructions to protect your roofing investment">
	<div class="prose max-w-none">
		<h1 class="text-3xl font-bold text-blue-800 mb-6">Roof Maintenance Guide</h1>
		<p class="text-lg text-gray-700 mb-8">Seasonal care instructions to protect your roofing investment</p>

		<div class="grid md:grid-cols-2 gap-8 mb-12">
			<!-- Spring -->
			<div class="bg-green-50 border border-green-200 rounded-lg p-6">
				<h3 class="text-xl font-semibold text-green-800 mb-4">Spring (March-May)</h3>
				<ul class="text-sm space-y-2">
					<li class="flex items-start">
						<input type="checkbox" class="mt-1 mr-3">
						<span>Inspect for winter storm damage</span>
					</li>
					<li class="flex items-start">
						<input type="checkbox" class="mt-1 mr-3">
						<span>Clean gutters and downspouts</span>
					</li>
					<li class="flex items-start">
						<input type="checkbox" class="mt-1 mr-3">
						<span>Check for loose or missing shingles</span>
					</li>
					<li class="flex items-start">
						<input type="checkbox" class="mt-1 mr-3">
						<span>Trim overhanging tree branches</span>
					</li>
				</ul>
			</div>

			<!-- Summer -->
			<div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6">
				<h3 class="text-xl font-semibold text-yellow-800 mb-4">Summer (June-August)</h3>
				<ul class="text-sm space-y-2">
					<li class="flex items-start">
						<input type="checkbox" class="mt-1 mr-3">
						<span>Monitor for storm damage after severe weather</span>
					</li>
					<li class="flex items-start">
						<input type="checkbox" class="mt-1 mr-3">
						<span>Check attic ventilation efficiency</span>
					</li>
					<li class="flex items-start">
						<input type="checkbox" class="mt-1 mr-3">
						<span>Inspect caulking around vents and chimneys</span>
					</li>
					<li class="flex items-start">
						<input type="checkbox" class="mt-1 mr-3">
						<span>Professional inspection after major storms</span>
					</li>
				</ul>
			</div>

			<!-- Fall -->
			<div class="bg-orange-50 border border-orange-200 rounded-lg p-6">
				<h3 class="text-xl font-semibold text-orange-800 mb-4">Fall (September-November)</h3>
				<ul class="text-sm space-y-2">
					<li class="flex items-start">
						<input type="checkbox" class="mt-1 mr-3">
						<span>Clean gutters and install gutter guards</span>
					</li>
					<li class="flex items-start">
						<input type="checkbox" class="mt-1 mr-3">
						<span>Remove leaves and debris from roof</span>
					</li>
					<li class="flex items-start">
						<input type="checkbox" class="mt-1 mr-3">
						<span>Check flashing around penetrations</span>
					</li>
					<li class="flex items-start">
						<input type="checkbox" class="mt-1 mr-3">
						<span>Prepare for winter weather conditions</span>
					</li>
				</ul>
			</div>

			<!-- Winter -->
			<div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
				<h3 class="text-xl font-semibold text-blue-800 mb-4">Winter (December-February)</h3>
				<ul class="text-sm space-y-2">
					<li class="flex items-start">
						<input type="checkbox" class="mt-1 mr-3">
						<span>Monitor for ice dam formation</span>
					</li>
					<li class="flex items-start">
						<input type="checkbox" class="mt-1 mr-3">
						<span>Check attic insulation and ventilation</span>
					</li>
					<li class="flex items-start">
						<input type="checkbox" class="mt-1 mr-3">
						<span>Remove snow buildup when excessive</span>
					</li>
					<li class="flex items-start">
						<input type="checkbox" class="mt-1 mr-3">
						<span>Schedule professional inspection if needed</span>
					</li>
				</ul>
			</div>
		</div>

		<div class="bg-blue-50 p-6 rounded-lg">
			<h3 class="text-lg font-semibold mb-4 text-blue-800">Maverick Exteriors Maintenance Support</h3>
			<p class="text-sm text-blue-700">
				<strong>Remember:</strong> Proper maintenance preserves your warranty and insurance coverage. Call us at 913-268-6052 when you need professional help.
			</p>
		</div>

		<PDFDownload pageTitle="Maintenance Guide" filename="maverick-exteriors-maintenance-guide" />
	</div>
</Layout>